@using Vidly.Models
@using System.Data.Entity
@model DbSet<Movie>
@{
    ViewBag.Title = "全部电影";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() != 0)
{
    <h2>全部电影</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">电影ID</th>
                <th scope="col">电影名</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <th>@movie.Id</th>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h2>当前没有电影</h2>
}

