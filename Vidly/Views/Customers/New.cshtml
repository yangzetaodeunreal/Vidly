@using Vidly.ViewModels
@model NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>创建新用户</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.FavoriteMovie)
        @Html.TextBoxFor(c => c.Customer.FavoriteMovie, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MemberShipType)
        @Html.DropDownListFor(c => c.Customer.MemberShipType, new SelectList(Model.MemberShipTypes, "Id", "Name"), "选择办理会员类型", new { @class = "form-control"})
    </div>

    <div class="form-group">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribed) 订阅Vidly电影每日推送
        </label>
    </div>
}