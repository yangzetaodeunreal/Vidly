@{
    ViewBag.Title = "全部用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>全部用户</h2>
    @Html.ActionLink("新增", "New", "Customers", new { }, new { @class = "btn btn-primary" })
    <table id="customers" class="table table-striped table-hover" >
        <thead>
            <tr>
                <th scope="col">用户名ID</th>
                <th scope="col">用户名</th>
                <th scope="col">会员级别</th>
                <th scope="col">操作</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('#customers').DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id"
                    },
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "memberShipType.name",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id='" + data + "'>删除</button>";

                        }
                    }

                ]
            });
            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("确定要删除吗？", function (result) {
                    if (result) {
                         $.ajax({
                            url: "/api/customers/" + $(button).attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })

                    }
                });
   
            });
        });
    </script>    
}
